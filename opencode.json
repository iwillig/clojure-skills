{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "anthropic/claude-sonnet-4-5",
  "autoupdate": true,
  "agent": {

    "clojure_build": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/clojure_build.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": true,
        "bash": true,
        "todowrite": false,
        "todoread": false
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },

    "plan_executor": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/plan_executor.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": true,
        "bash": true,
        "todowrite": false,
        "todoread": false
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },

    "code_archivist": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/clojure_build.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": true,
        "bash": true,
        "todowrite": false,
        "todoread": false,
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },
    "clojure_skill_builder": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/clojure_skill_builder.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": true,
        "bash": true,
        "todowrite": false,
        "todoread": false
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },

    "shortcut_cli_builder": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/shortcut_cli_builder.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": true,
        "bash": true,
        "todowrite": false,
        "todoread": false
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    }
  },
  "mcp": {},
  "lsp": {
    "clojure-lsp": {
      "command": ["/usr/local/bin/clojure-lsp"],
      "extensions": [".clj", ".cljs", ".cljc", ".edn", ".bb"],
      "env": {
        "CLOJURE_LSP_LOG_LEVEL": "info"
      },
      "initialization": {
        "initializationOptions": {
          "project-root-uri-as-project-root?": true,
          "text-document-sync-kind": 2
        }
      }
    }
  }
}
