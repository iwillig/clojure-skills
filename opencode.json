{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "anthropic/claude-sonnet-4-5",
  "autoupdate": true,
  "agent": {
    "clojure_build": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/clojure_build.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": false,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },

    "clojure_build_compressed": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/clojure_build.compressed.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": false,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },

    "clojure_skill_builder": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/clojure_skill_builder.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": false,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },
    "clojure_skill_builder_compressed": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/clojure_skill_builder.compressed.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": false,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },
    "shortcut_cli_builder": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/shortcut_cli_builder.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": false,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },
    "shortcut_cli_builder_compressed": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/shortcut_cli_builder.compressed.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": false,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    },
    "sqlite3_ffm_builder": {
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./_build/sqlite3_ffm_builder.md}",
      "tools": {
        "write": true,
        "edit": true,
        "read": false,
        "bash": true
      },
      "permission": {
        "write": "ask",
        "edit": "ask"
      }
    }
  },
  "mcp": {
    "clojure-mcp": {
      "type": "local",
      "enabled": true,
      "command": ["clojure", "-X:mcp", ":port", "7889"]
    }
  },
  "lsp": {
    "clojure-lsp": {
      "command": ["/opt/homebrew/bin/clojure-lsp"],
      "extensions": [".clj", ".cljs", ".cljc", ".edn", ".bb"],
      "env": {
        "CLOJURE_LSP_LOG_LEVEL": "info"
      },
      "initialization": {
        "initializationOptions": {
          "project-root-uri-as-project-root?": true,
          "text-document-sync-kind": 2
        }
      }
    }
  }
}
